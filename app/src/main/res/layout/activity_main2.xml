<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <Button
        android:id="@+id/botonOcho"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="432dp"
        android:fontFamily="@font/monoton"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_green_light"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/botonUno"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/botonSeis"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="103dp"
        android:layout_height="106dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="356dp"
        android:fontFamily="@font/monoton"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_green_light"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/J1" />

    <Button
        android:id="@+id/botonSiete"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="101dp"
        android:layout_height="99dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/monoton"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_green_light"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/botonCero"
        app:layout_constraintTop_toBottomOf="@+id/J2" />

    <Button
        android:id="@+id/botonCinco"
        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="312dp"
        android:fontFamily="@font/monoton"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_green_light"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/botonUno"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/botonTres"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="102dp"
        android:layout_height="97dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/monoton"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_green_light"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/J1" />

    <Button
        android:id="@+id/botonCuatro"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="106dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="236dp"
        android:fontFamily="@font/monoton"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_green_light"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/botonCero"
        app:layout_constraintTop_toBottomOf="@+id/J2" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/J1"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="38dp"
        android:fontFamily="@font/monoton"
        android:text="Jugador 1"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="19sp"
        app:layout_constraintEnd_toStartOf="@+id/J2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <TextView
        android:id="@+id/J2"
        android:layout_width="118dp"
        android:layout_height="35dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="69dp"
        android:fontFamily="@font/monoton"
        android:text="Jugador 2"
        android:textColor="@android:color/background_dark"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/J1"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/botonCero"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="104dp"
        android:layout_height="92dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/monoton"
        android:onClick="onClick"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/J1" />

    <Button
        android:id="@+id/botonUno"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="106dp"
        android:layout_height="97dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/monoton"
        android:onClick="onClick"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_green_light"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/botonCero"
        app:layout_constraintTop_toBottomOf="@+id/Uno" />

    <Button
        android:id="@+id/botonDos"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="99dp"
        android:layout_height="92dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/monoton"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_green_light"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/botonUno"
        app:layout_constraintTop_toBottomOf="@+id/Uno" />

    <TextView
        android:id="@+id/Uno"
        android:layout_width="227dp"
        android:layout_height="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="38dp"
        android:fontFamily="@font/atma_light"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/J1" />

    <Button
        android:id="@+id/Settings"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/ic_info_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonSeis" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/botonTres"
        app:layout_constraintTop_toBottomOf="@+id/botonCero"
        app:layout_constraintVertical_bias="0.473"
        app:srcCompat="@drawable/tabhor"
        tools:layout_editor_absoluteX="7dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/botonSeis"
        app:layout_constraintTop_toBottomOf="@+id/botonTres"
        app:layout_constraintVertical_bias="0.052"
        app:srcCompat="@drawable/tabhor"
        tools:layout_editor_absoluteX="5dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="15dp"
        android:layout_height="357dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/botonSiete"
        app:layout_constraintStart_toEndOf="@+id/botonSeis"
        app:layout_constraintTop_toBottomOf="@+id/Uno"
        app:srcCompat="@drawable/tabvert" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="15dp"
        android:layout_height="357dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/botonDos"
        app:layout_constraintStart_toEndOf="@+id/botonSiete"
        app:layout_constraintTop_toBottomOf="@+id/Uno"
        app:srcCompat="@drawable/tabvert" />

</android.support.constraint.ConstraintLayout>