<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <Button
        android:id="@+id/botonOcho"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="108dp"
        android:layout_height="93dp"
        android:layout_marginTop="420dp"
        app:layout_constraintStart_toEndOf="@+id/botonUno"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/botonSeis"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="114dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/J1" />

    <Button
        android:id="@+id/botonSiete"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="108dp"
        android:layout_height="93dp"
        android:layout_marginTop="349dp"
        app:layout_constraintStart_toEndOf="@+id/botonCero"
        app:layout_constraintTop_toBottomOf="@+id/J2" />

    <Button
        android:id="@+id/botonCinco"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="108dp"
        android:layout_height="93dp"
        android:layout_marginTop="317dp"
        app:layout_constraintStart_toEndOf="@+id/botonUno"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/botonTres"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="114dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="246dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/J1" />

    <Button
        android:id="@+id/botonCuatro"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="108dp"
        android:layout_height="93dp"
        android:layout_marginTop="245dp"
        app:layout_constraintStart_toEndOf="@+id/botonCero"
        app:layout_constraintTop_toBottomOf="@+id/J2" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/J1"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:text="Jugador 1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <TextView
        android:id="@+id/J2"
        android:layout_width="109dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Jugador 2"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/J1"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/botonCero"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="114dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="144dp"
        android:onClick="onClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/J1" />

    <Button
        android:id="@+id/botonUno"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="108dp"
        android:layout_height="93dp"
        android:layout_marginTop="144dp"
        android:onClick="onClick"
        app:layout_constraintStart_toEndOf="@+id/botonCero"
        app:layout_constraintTop_toBottomOf="@+id/J2" />

    <Button
        android:id="@+id/botonDos"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="108dp"
        android:layout_height="93dp"
        android:layout_marginTop="216dp"
        app:layout_constraintStart_toEndOf="@+id/botonUno"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <TextView
        android:id="@+id/Uno"
        android:layout_width="188dp"
        android:layout_height="38dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="66dp"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/J1" />

    <Button
        android:id="@+id/Settings"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/ic_info_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonSeis" />

</android.support.constraint.ConstraintLayout>